<div class="container mt-4 p-5">
  <h2><%= @contact.name %></h2>
  <h4><%= @contact.phone_number %></h4>
  <h4><%= @contact.address %></h4>
  <h4><%= @contact.social_media_handle.start_with?('@') ? @contact.social_media_handle : "@#{@contact.social_media_handle}" %></h4>
  <%= link_to 'Back', contacts_path, class: 'btn' %>
  <%= link_to 'Edit', edit_contact_path(@contact), class: 'btn' %>
  <%= link_to 'Delete', contact_path(@contact),
  data: { turbo_confirm: 'Are you sure?', turbo_method: :delete },
  class: 'btn' %>
</div>
