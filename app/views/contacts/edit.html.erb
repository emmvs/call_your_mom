<div class="container my-2 p-5" data-controller="contact-picker">
 <h3><%= t('buttons.edit_contact') %></h3>
 <%= simple_form_for @contact do |f| %>
   <%= f.input :name, 
               label: t('helpers.label.contact.name'), 
               error: t('activerecord.errors.models.contact.attributes.name.blank'),
               input_html: { data: { contact_picker_target: 'name' } } %>

   <%= f.input :relationship, 
               label: t('helpers.label.contact.relationship'), 
               collection: Contact::RELATIONSHIP_TYPES.map { |type| [t("contacts.relationships.#{type}"), type] }, 
               prompt: 'Choose a relationship',
               error: t('activerecord.errors.models.contact.attributes.relationship.blank'),
               input_html: { data: { contact_picker_target: 'relationship' } } %>

   <%= f.input :email, 
               as: :email, 
               placeholder: 'user@domain.com', 
               error: t('activerecord.errors.models.contact.attributes.email.blank'),
               input_html: { data: { contact_picker_target: 'email' } } %>

   <%= f.input :phone_number, 
               label: t('helpers.label.contact.phone_number'), 
               placeholder: '+1234567890', 
               error: t('activerecord.errors.models.contact.attributes.phone_number.blank'),
               input_html: { data: { contact_picker_target: 'phoneNumber' } } %>

   <%= f.input :address, 
               label: t('helpers.label.contact.address'), 
               error: t('activerecord.errors.models.contact.attributes.address.blank'),
               input_html: { data: { contact_picker_target: 'address' } } %>

   <%= f.input :social_media_handle, 
               placeholder: '@yourhandle', 
               error: t('activerecord.errors.models.contact.attributes.social_media_handle.blank'),
               input_html: { data: { contact_picker_target: 'socialMediaHandle' } } %>

   <%= f.button :submit, t('submit.contact.save') %>
 <% end %>
 <%= link_to 'Back', contact_path(@contact), class: 'btn' %>
</div>
